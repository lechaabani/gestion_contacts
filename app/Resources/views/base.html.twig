

{% block stylesheets %}
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
{% endblock %}

{% block body %}
    <div class="well well-sm" style="width: 925px; margin: 0 auto; margin-top: 20px;">
        <div>
            {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                Bienvenue {{  app.user.nom }}  {{  app.user.prenom }} |
                <a class="btn btn-primary btn-sm" href="{{ path('logout') }}">
                    Se deconnecter
                </a>
            {% else %}
                <a class="btn btn-default" href="{{ path('login') }}">Login</a>
            {% endif %}
        </div>

        {% for type, messages in app.session.flashBag.all %}
            {% for message in messages %}
                <div class="{{ type }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}

        <div>
            <br/>
            {% block content %}
            {% endblock content %}
        </div>
    </div>
{% endblock %}
